#include <iostream>
using namespace std;

int main() {
  string characterName = "Tom the brave";

  cout << characterName.length()
       << endl; // how many characters are in characterName
  cout << characterName[2]
       << endl; // shows the index position 2 of the string. starts at 0.
  characterName[0] = 'R'; // edit string from index position
  cout << characterName << endl;
  cout << characterName.find("the", 0)
       << endl; // find the characters "the" starting from the index position 0.
                // It returns where in the index "the" starts to show up.
  cout
      << characterName.substr(4, 6)
      << endl; // first parametersays where in index value it takes from and the
               // second parameter dictates how many characters it willtake.

  string substringName = characterName.substr(4, 6);
  cout << substringName << endl;

      return 0;
}